# NetSuite OAuth1/TBA Credentials
NETSUITE_ACCOUNT_ID=your_account_id
NETSUITE_CONSUMER_KEY=your_consumer_key
NETSUITE_CONSUMER_SECRET=your_consumer_secret
NETSUITE_TOKEN_ID=your_token_id
NETSUITE_TOKEN_SECRET=your_token_secret

# NetSuite RESTlet URLs
NETSUITE_RESTLET_URL_EMAIL=https://your_account.restlets.api.netsuite.com/app/site/hosting/restlet.nl?script=XXX&deploy=1
NETSUITE_RESTLET_URL_STAMP=https://your_account.restlets.api.netsuite.com/app/site/hosting/restlet.nl?script=XXX&deploy=1

# OpenAI API Key (for LLM agent)
OPENAI_API_KEY=sk-...

# Optional: Gemini API (alternative to OpenAI)
# GOOGLE_API_KEY=your_google_api_key
# GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# Email Signature
EMAIL_SIGNATURE_NAME=Your Name
EMAIL_SIGNATURE_COMPANY=Your Company

# Runtime Configuration
DRY_RUN=true
SEND_EMAILS=false
MAX_EMAILS=50
SLEEP_BETWEEN_VENDORS_SEC=1.0

# Testing (optional - filter to single vendor)
# TEST_VENDOR_EMAIL=test@vendor.com
